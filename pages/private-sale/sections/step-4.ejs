<script>
  const formObject = {
    "first-name": { value: false, required: true },
    "last-name": { value: false, required: true },
    "dial-code": { value: '1', required: true },
    "email": { value: false, required: true },
    "mobile-number": { value: false, required: true },
    "address": { value: false, required: true },
    "attachments": { value: false, required: true }
  }

  for (const key of Object.keys(formObject)) {
    let element = document.querySelector(`.${key}`)
    if (element.nodeName === 'INPUT') {
      element.value = formObject[key].value === false ? '' : formObject[key].value
      element.addEventListener("input", (event) => {
        let self = event.target
        formObject[self.getAttribute('class')].value = self.value
        observeArray()
      })
    }
  }

  function observeArray() {
    let block = true
    for (const key of Object.keys(formObject)) {
      let self = String(formObject[key].value)
      if (formObject[key].value !== false && formObject[key].value.length > 0) {
        block = false
        if (key === "email") {
          if (self.indexOf("@") < 0) { block = true }
          if (self.indexOf(".") < 0) { block = true }
        }
        if (key === "mobile-number") {
          if (isNaN(self)) { block = true }
        }
        if (key === "address") {
          if (self.length < 42) { block = true }
          if (self.indexOf("0x") !== 0) { block = true }
        }
        if (block === false) {
          document.querySelector(`.${key}`).parentNode.classList.remove("empty")
        }
      }
      else {
        block = true
        document.querySelector(`.${key}`).parentNode.classList.add("empty")
        break
      }
    }
    if (block === false) {
      document.querySelector(".btn.submit").classList.remove('disabled')
    } else {
      document.querySelector(".btn.submit").classList.add('disabled')
    }
  }

  const attachments = document.querySelector(".attachments-input")
  document.querySelector('.attachments-parent').addEventListener("dragover", (e) => {
    e.preventDefault()
  })
  document.querySelector('.attachments-parent').addEventListener("drop", (e) => {
    e.preventDefault()
    dropHandler(e)
  })

  const gallery = document.querySelector(".uploaded-gallery")
  function dropHandler(e) {
    // Prevent default behavior (Prevent file from being opened)
    e.preventDefault();

    if (e.dataTransfer.items) {
      var url = e.dataTransfer.getData('text/plain');
      // for img elements, url is the img src so 
      // create an Image Object & draw to canvas
      if (url) {
        var img = new Image();
        img.onload = function () {
          // ctx.drawImage(this,0,0);
          displayFile(this)
        }
        img.src = url;
        // for img file(s), read the file & draw to canvas
      } else {
        handleFiles(e.dataTransfer.files);
      }


    }
  }

  function handleFiles(files) {
    for (var i = 0; i < files.length; i++) {
      var file = files[i];
      var imageType = /image.*/;
      if (!file.type.match(imageType)) {
        gallery.classList.add("only-images-supported")

        continue;
      }
      var img = document.createElement("img");
      img.classList.add("obj");
      img.file = file;
      var reader = new FileReader();
      reader.onload = (function (aImg) {
        return function (e) {
          aImg.onload = function () {
            displayFile(aImg)
          }
          // e.target.result is a dataURL for the image
          aImg.src = e.target.result;
        };
      })(img);
      reader.readAsDataURL(file);
    } // end for
  } // end handleFiles

  attachments.addEventListener("input", (e) => {
    handleFiles(attachments.files)
  })

  function displayFile(img) {
    let id = `${Date.now()}-${img.src.substring(img.src.length - 5).replace(/[^0-9a-z]/gi, '')}`
    formObject.attachments.value = formObject.attachments.value ? formObject.attachments.value : []
    formObject.attachments.value.push({ id: id, src: img.src })
    observeArray()
    img.addEventListener("click", twoStageDelete)
    img.setAttribute("data-id", id)
    img.setAttribute("data-clicks", 0)
    gallery.appendChild(img)
    gallery.classList.add("populated")
    gallery.classList.remove("only-images-supported")
  }
  function twoStageDelete(e) {
    const target = e.target
    const clicks = target.getAttribute("data-clicks")
    if (clicks == 0) {
      for (const i of document.querySelectorAll(".marked-for-deletion")) {
        i.setAttribute("data-clicks", 0)
        i.classList.remove('marked-for-deletion')
      }
      target.classList.add('marked-for-deletion')
      target.setAttribute("data-clicks", 1)
      return
    }
    if (clicks == 1) {
      const id = target.getAttribute("data-id")
      formObject.attachments.value = formObject.attachments.value.filter(function (obj) {
        return obj.id !== id;
      });
      target.remove()
      if (!formObject.attachments.value || formObject.attachments.value.length == 0) {
        gallery.classList.remove("populated")
      }
      observeArray()
      return
    }
  }


  document.querySelectorAll(".dropdown").forEach((dropdown) => {
    dropdown.addEventListener("click", (event) => {
      event.stopPropagation()
      toggleDropdown(event)
    }, false)
    dropdown.querySelectorAll(".option").forEach((option) => {
      const pre = option.querySelector(".pre")
      const flag = pre.innerHTML.split(" ")[0]
      const name = pre.innerHTML.replace(`${flag} `, '')
      const span = document.createElement('span')
      span.classList.add("flag-name-parent")
      span.innerHTML = `<span class="flag">${flag}</span><span class="country-name">${name}</span>`
      pre.replaceWith(span)
      option.addEventListener("click", (event) => {
        event.stopPropagation()

        selectOption(event)
      }, false)
    })
  })
  function selectOption(event) {
    event.preventDefault()
    event.stopPropagation()
    const opt = event.target
    formObject['dial-code'].value = opt.querySelector(".data").innerHTML
    const dropdown = opt.parentNode
    dropdown.querySelectorAll(".option").forEach((opt) => {
      opt.classList.remove('selected')
    })
    observeArray()

    opt.classList.add('selected')
    dropdown.classList.remove('open')
  }
  function toggleDropdown(eve) {
    let e = eve.target
    if (e.classList.contains('open')) {
      e.classList.remove('open')
      return
    }
    e.classList.add('open')
  }
  document.body.addEventListener("click", () => {
    document.querySelectorAll(".dropdown").forEach((dropdown) => {
      dropdown.classList.remove("open")
    })
  })
</script>

